{
  "name": "open-sesame-compiler",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mob-sakai/OpenSesameCompiler.git"
  },
  "author": "mob-sakai <sakai861104@gmail.com> (https://github.com/mob-sakai)",
  "scripts": {
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3.4.0-beta.9",
    "semantic-release": "^16.0.0-beta.46"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      ["@semantic-release/github",{
        "assets": [
          {"path": "bin/*"}
        ]
      }],
      ["@semantic-release/exec", {
        "prepareCmd": "./prepare.sh ${nextRelease.version}",
        "publishCmd": "dotnet nuget push bin/Release/*.nupkg -k $NUGET_TOKEN -s https://api.nuget.org/v3/index.json"
      }]
    ]
  }
}
